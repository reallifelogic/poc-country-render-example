{
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "jsx": "react-jsx",
    "noUnusedLocals": false,
    "lib": ["dom"],
    "tsBuildInfoFile": "dist/tsconfig.app.tsbuildinfo",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2022",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@mbb-poc/mbb-ui-kit": ["../../libs/mbb-ui-kit/src/index.ts"]
    }
  },
  "files": ["../../node_modules/@nx/react-native/typings/svg.d.ts"],
  "exclude": [
    "out-tsc",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/test-setup.ts",
    "eslint.config.js",
    "eslint.config.cjs",
    "eslint.config.mjs"
  ],
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"],
  "references": [
    {
      "path": "../../libs/mbb-ui-kit/tsconfig.lib.json"
    }
  ]
}
